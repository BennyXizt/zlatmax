<%
	blockClass = 'header'
%>

<header class="header">
    <div class="header__top top-header">
        <div class="top-header__container container">
            <%- include('externe/components/HeaderMenu/HeaderMenu.ejs', {
                header_menu_component: {
                    this: {
                        parent: 'top-header'
                    },
                    list: [
                        {'href': './about.html', 'anchor': 'О нас'},
                        {'href': './prices.html', 'anchor': 'Оплата и доставка'},
                        {'href': './blog.html', 'anchor': 'Новости'},
                        {'href': './contacts.html', 'anchor': 'Контакты'}
                    ],
                    activePage: header_component.activePage ?? ''
                }
            }) %>
            <a href="" class="top-header__user">
                <%- include('externe/components/Icon/Icon.ejs', {
                    icon_component: {
                        this: {
                            parent: 'top-header'
                        },
                        name: 'user'
                    }
                }) %>
                Личный кабинет
            </a>
            <%- include('externe/components/Burger/Burger.ejs', {
                burger_component: {
                    this: {
                        parent: 'top-header'
                    }
                }
            })%>
        </div>
    </div>
    <div class="header__body body-header">
        <div class="body-header__container container">
            <% if(typeof header_component.homePage !== 'undefined') { %>
                <%if(header_component.homePage === true) { %>
                    <%- include('externe/components/Icon/Icon.ejs', {
                        icon_component: {
                            this: {
                                class: 'body-header__logo'
                            },
                            name: 'logo'
                        }
                    })%>
                <% } else { %>
                    <a href="./" class="header__link-logo">
                       <%- include('externe/components/Icon/Icon.ejs', {
                            icon_component: {
                                this: {
                                    parent: 'body-header'
                                },
                                name: 'logo'
                            }
                        })%>
                    </a>
                <% } %>
            <% } %>
            <div class="body-header__search">
                <%- include('externe/components/ComboBox/ComboBox.ejs', {
                    combobox_component: {
                        this: {
                            parent: 'body-header',
                            dataAttribute: [
                                'action=#',
                                'data-fsc-combobox-search-type=firstLetter',
                            ]
                        },
                        prestyled: [
                            'list',
                        ],
                        placeholder: 'Поиск',
                        icons: {
                            input_dispose: {
                                this: {
                                    tag: 'button'
                                },
                                path: '/media/icons/sprite.svg#search'
                            },
                        },
                        // data: [
                        //     { flag: 'de', city: 'Deutschland' },
                        //     { flag: 'fr', city: 'France' },
                        //     { flag: 'es', city: 'España' }
                        // ]
                    }
                }) %>
            </div>
            <div class="body-header__actions actions-header">
                <a href='#' class="actions-header__location">
                    <%- include('externe/components/Icon/Icon.ejs', {
                        icon_component: {
                            this: {
                                class: 'actions-header__location'
                            },
                            name: 'location'
                        }
                    })%>
                    Москва
                </a>
                <div class="actions-header__phones">
                    <%- include('externe/components/Accordion/Accordion.ejs', {
                        accordion_component: {
                            this: {
                                parent: 'actions-header'
                            },
                            title: {
                                this: {
                                    tag: 'a',
                                    dataAttribute: 'href=tel:+123456789'
                                },
                                label: '8-800-777-49-67'
                            },
                            icon: 'arrow-down',
                            body: [
                                {
                                    this: {
                                        tag: 'a',
                                        dataAttribute: 'href=tel:+123456789'
                                    },
                                    label: '8-800-777-49-68'
                                },
                                {
                                    this: {
                                        tag: 'a',
                                        dataAttribute: 'href=tel:+123456789'
                                    },
                                    label: '8-800-777-49-69'
                                },
                                {
                                    this: {
                                        tag: 'a',
                                        dataAttribute: 'href=tel:+123456789'
                                    },
                                    label: '8-800-777-49-70'
                                },
                        
                            ]
                        }
                    })%>
                    <button class="actions-header__callback">Заказать звонок</button>
                </div>
                <a href="#" class="actions-header__favourite"></a>
                <div class="actions-header__cart cart-header">
                    <div class="cart-header__icon">
                        <%- include('externe/components/Icon/Icon.ejs', {
                            icon_component: {
                                this: {
                                    parent: 'cart-header'
                                },
                                name: 'cart'
                            }
                        }) %>
                        <span>0</span>
                    </div>
                    <div class="cart-header__body">
                        <div class="cart-header__summ">
                            0 р.
                        </div>
                        <a href="#" class="cart-header__link">
                            Оформить заказ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>